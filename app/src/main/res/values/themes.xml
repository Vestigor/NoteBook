<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 应用基础主题 -->
    <style name="Theme.NoteBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 辅助颜色 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@color/background_light</item>
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- 在此自定义主题 -->
    </style>

    <style name="Theme.NoteBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteBook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.NoteBook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>
</resources>